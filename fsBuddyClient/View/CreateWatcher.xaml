<Window x:Class="Client.View.CreateWatcher"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client.View"
        xmlns:ViewModel="clr-namespace:Client.ViewModel"
        mc:Ignorable="d"
        
        WindowState="Normal"
        WindowStartupLocation="CenterScreen"

        Title="Create watcher" 
        Height="400" Width="500"
        MinHeight="300" MinWidth="400"
        >

    <Window.DataContext>
        <ViewModel:CreateWatcherPresenter/>
    </Window.DataContext>

    <Window.InputBindings>
        <KeyBinding 
            Key="F7" 
            CommandParameter="{Binding ElementName=WatcherName}"
            Command="{Binding Path=CreateWatcherCommand}"
        />
    </Window.InputBindings>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Text="{Binding WatcherName}"></TextBlock>
        <TextBox Grid.Row="1" Text="{Binding Path=WatcherName, ElementName=window, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"></TextBox>
        <Button Grid.Row="2">Test</Button>
    </Grid>
</Window>
